<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/kingdom_list_item_height"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/kindgomImage"
        android:layout_width="@dimen/kingdom_list_item_image_size"
        android:layout_height="@dimen/kingdom_list_item_image_size"
        android:layout_margin="@dimen/kingdom_list_item_margin"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/kingdomTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kingdom"
            android:textSize="@dimen/kingdom_list_item_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorPrimaryDark"
            android:layout_marginRight="@dimen/kingdom_list_item_margin"/>
    </LinearLayout>

</LinearLayout>

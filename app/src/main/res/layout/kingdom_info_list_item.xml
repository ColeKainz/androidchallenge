<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/kingdom_info_list_item_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/kingdomInfoQuestImage"
        android:layout_width="@dimen/kingdom_info_list_item_image_size"
        android:layout_height="@dimen/kingdom_info_list_item_image_size"
        android:layout_margin="@dimen/kingdom_info_list_item_margin"
        app:srcCompat="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/kingdomInfoQuestTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quest Title"
            android:textSize="@dimen/kingdom_info_list_item_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="@dimen/kingdom_info_list_item_margin"
            android:background="?attr/colorPrimaryDark" />
    </LinearLayout>

</LinearLayout>
